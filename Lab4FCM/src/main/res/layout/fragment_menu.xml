<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ComidasFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Agregar Platos y Bebidas" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Seleccione una opciÃ³n"
        android:textSize="20sp" />

    <Button
        android:id="@+id/id_comidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Comidas"
        android:textSize="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorLetter"
        android:textStyle="bold"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/id_bebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bebidas"
        android:textSize="30sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorLetter"
        android:textStyle="bold"
        android:layout_weight="2"/>

</LinearLayout>