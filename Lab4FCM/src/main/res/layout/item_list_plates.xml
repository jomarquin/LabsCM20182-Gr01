<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_photo_listPlate"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/sin_imagen"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:id="@+id/layout_descrip"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_name_listPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Nombre Plato"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_type_listPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo Plato" />

                <TextView
                    android:id="@+id/id_price_listPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Plato" />

                <TextView
                    android:id="@+id/id_time_listPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descripciÃ³n" />
            </LinearLayout>
            <ImageView
                android:id="@+id/id_mark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mark"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>